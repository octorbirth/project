<%= render 'layouts/nav' %>

<p id="notice"><%= notice %></p>

<div class="container" style="margin-top:50px">
  <h1 style="display:inline">아이템 리스트</h1>
  <div style="float:right">
    <%= link_to '아이템 등록', new_post_path, class: "btn btn-secondary" %>
    <a href="/home/manager" class="btn btn-secondary">메인화면</a>
  </div>
  <hr>
  
  <div class="row">  
    <% @posts.each do |post| %>
      <% if post.master == current_user.username %>
          
        
            <div class="col-sm-6 col-md-4" style="padding: 15px; border: 2px double; border-radius: 25px;">
              <div class="thumbnail">
                <center><%= image_tag post.image.thumb.url %></center>
                <div class="caption" style="padding: 10px">
                  <h5 style="text-align:center"><%= post.name %></h5><hr>
            
                  대여기간: <%= post.day %> 일<br>
                  총 보유량: <%= post.amount %> 개<br>
                  현재 재고: <%= post.left %> 개<br><br>
                  
                  <%= link_to '보기', post, class: "btn btn-secondary" %> |
                  <%= link_to '수정', edit_post_path(post), class: "btn btn-secondary" %> |
                  <%= link_to '삭제', post, method: :delete, data: { confirm: '정말 삭제 하시겠습니까?' }, class:"btn btn-danger" %>
                </div>
              </div>
            </div>
        
      
    
        <% end %>
    <% end %>
  </div>
  

  
  
</div>





