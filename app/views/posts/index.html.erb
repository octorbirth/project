<p id="notice"><%= notice %></p>

<%= @uid %>
<%= current_user.username%>
<h1>아이템 리스트</h1>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Day</th>
      <th>Amount</th>
      <th>Left</th>
      <th>Res</th>
      <th>Master</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.name %></td>
        <td><%= post.day %></td>
        <td><%= post.amount %></td>
        <td><%= post.left %></td>
        <td><%= post.res %></td>
        <td><%= post.master %></td>
        <td><%= image_tag post.image.thumb.url %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
