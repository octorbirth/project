<%= render 'layouts/nav' %>
      


<div class="container" style="margin-top:50px">
    
   <h2 style="display:inline">대여자 목록</h2><h5 style="display:inline"> (품명 / 대여기간 / 대여자 / 대여날짜)</h5>
  <div style="float:right">
   
    <div style="float:right">
    
    <a href="/home/manager" class="btn btn-secondary"  style="color:black">메인화면</a>
   </div><hr>
  
  </div><hr>
    
  
  <ul class="list-group">
    <% i = 1 %>
    <% @posts.each do |post| %>
    <li class="list-group-item justify-content-between">
      <<%= i %>>    
      <%= post.name %> / 대여기간: <%= post.day %>일 / <%= post.uid %> / <%= post.updated_at.in_time_zone("Seoul")%>
      <span class="badge badge-default">
        <form action="complete">
          <input type="hidden" name="master" value="<%=post.master%>">
          <input type="hidden" name="item_id" value="<%=post.id%>">
          <input type="hidden" name="uid" value="<%=current_user.username%>">
          <input type="submit" class="btn btn-secondary" value="반납">
        </form>
      </span>
    </li>
    
    <% i = i+1 %>
    <% end %>
  
  </ul>

</div>