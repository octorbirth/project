<%= render 'layouts/nav' %>
      


<div class="container" style="margin-top:50px">
    
   <h2 style="display:inline">신청자 목록</h2><h5 style="display:inline"> (품명 / 대여기간 / 신청자)</h5>
   <div style="float:right">

    <a href="/home/manager" class="btn btn-secondary" style="color:black" >메인화면</a>

   </div><hr>
  
    
  
  <ul class="list-group">
    <% i = 1 %>
    <% @posts.each do |post| %>
  
  
    <li class="list-group-item justify-content-between">
       <<%= i %>>    
      <%= post.name %> / 대여기간: <%= post.day %>일 / <%= post.uid %>
      <span class="badge badge-default">
      <form action="land">
            <input type="hidden" name="master" value="<%=post.master%>">
            <input type="hidden" name="item_id" value="<%=post.id%>">
            <input type="hidden" name="uid" value="<%=current_user.username%>">
            <input type="submit" class="btn btn-secondary" value="대여">
        </form>
      
      </span>
    </li>
    
    <% i = i+1 %>
    <% end %>
  
  </ul>



</div>