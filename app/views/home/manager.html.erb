<% if user_signed_in? %>
<%=current_user.username %>
<a href="/users/sign_out">로그아웃</a>
<%end%>

<form action="glist" method="get">
    <button type="submit" class="btn btn-primary">신청자 목록</button>
</form>

<form action="tlist" method="get">
    <button type="submit" class="btn btn-primary">대여자 목록</button>
</form>

<form action="item_manager" method="get">
    <button type="submit" class="btn btn-primary">아이템 관리</button>
    <input type="hidden" name="uid" value="<%=current_user.username%>">
</form>

<form action="give" method="get">
    <button type="submit" class="btn btn-primary">신청 목록</button>
</form>

<form action="take" method="get">
    <button type="submit" class="btn btn-primary">대여 목록</button>
</form>

<form action="search">
  관리자 닉네임: <input type="text" name="master"><br>
  <input type="submit" value="검색">
</form>

<% if @master != nil %>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.name %></td>
        <td><%= post.day %></td>
        <td><%= post.amount %></td>
        <td><%= post.left %></td>
        <td><%= post.res %></td>
        <td><%= post.master %></td>
        <td><%= image_tag post.image.thumb.url %></td>
        <a href="/home/click/<%=post.id %>">[신청]</a><br>
      </tr>
      <br>
    <% end %>
<% end %>
